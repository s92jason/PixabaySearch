<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    tools:context=".view.ui.main.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/block_search_bar">

        <include
            android:id="@+id/page_no_result"
            layout="@layout/view_search_no_result" />

        <include
            android:id="@+id/page_result"
            layout="@layout/view_search_result"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_search_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_search_bar_edittext"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toStartOf="@id/button_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_pixabay_logo"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/pixabay_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_keyword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_search_bar_edittext"
            android:hint="@string/search_fragment_search_bar_edit_text_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_bdbdbd"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_pixabay_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/edittext_keyword"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/button_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_search_bar_search_btn"
        android:contentDescription="@string/search_fragment_search_bar_image_button_desc"
        android:src="@drawable/ic_baseline_image_search_24"
        app:layout_constraintBottom_toBottomOf="@id/block_search_bar"
        app:layout_constraintDimensionRatio="h, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/block_search_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_search_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_search_history"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="@id/block_search_bar"
        app:layout_constraintStart_toStartOf="@id/block_search_bar"
        app:layout_constraintTop_toBottomOf="@id/block_search_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>